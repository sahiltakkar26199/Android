<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sahiltakkar.moviesapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/movies"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.sahiltakkar.moviesapp.UI.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sahiltakkar.moviesapp.UI.MovieDetailsActivity"
            android:label="Movie Details"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.sahiltakkar.moviesapp.UI.MainActivity" >
        </activity>
        <activity
            android:name="com.example.sahiltakkar.moviesapp.UI.FavouritesActivity"
            android:label="Favourites"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.sahiltakkar.moviesapp.UI.MainActivity" >
        </activity>

        <provider
            android:name="android.arch.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.sahiltakkar.moviesapp.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.sahiltakkar.moviesapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>